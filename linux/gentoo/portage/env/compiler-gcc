# ----------------------------------------------------
# Compiler
# ----------------------------------------------------

CC="gcc"
CXX="g++"
LD="ld.bfd"
NM="gcc-nm"
AR="gcc-ar"
RANLIB="gcc-ranlib"
STRIP="strip"
OBJCOPY="objcopy"
OBJDUMP="objdump"

# ----------------------------------------------------
# Compiler Flags
# ----------------------------------------------------

CFLAGS="-march=znver4 -O2 -pipe"
CXXFLAGS="${CFLAGS}"

LDFLAGS="-Wl,-O2 -Wl,--as-needed"

FFLAGS="-O2 -pipe -march=znver4"
FCFLAGS="-O2 -pipe -march=znver4"
